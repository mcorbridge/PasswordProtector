<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.mcorbridge.passwordprotector.TestActivity">

    <TextView android:text="@string/action_test" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="read local db"
        android:id="@+id/button0"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:onClick="readFromLocalDatabase"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add password local 0"
        android:id="@+id/button1"
        android:layout_marginTop="80dp"
        android:onClick="addToLocalDatabase0"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="add password local 1"
        android:id="@+id/button2"
        android:layout_marginTop="130dp"
        android:onClick="addToLocalDatabase1"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="clear db"
        android:id="@+id/button3"
        android:layout_marginTop="180dp"
        android:onClick="clearDatabase"/>


</RelativeLayout>
