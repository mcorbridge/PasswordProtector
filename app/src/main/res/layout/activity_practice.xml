<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >


    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#ffffff"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/red_square_home">
            <ImageView
                android:id="@+id/red_square"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/red_square" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/black_square_home">
            <ImageView
                android:id="@+id/black_square"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/black_square" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/blue_square_home">
            <ImageView
                android:id="@+id/blue_square"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/blue_square" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/yellow_square_home">
            <ImageView
                android:id="@+id/yellow_square"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/yellow_square" />
        </RelativeLayout>

    </LinearLayout>


    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="221dp"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_gravity="center"
        android:layout_marginTop="68dp"
        android:layout_below="@+id/top_container"
        android:layout_centerHorizontal="true">


        <!--                  row 0                  -->
        <RelativeLayout
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/topLeft_drop_square"
            android:background="@color/grey"
            android:padding="20dp"/>

        <Space
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_row="0"
            android:layout_column="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/topRight_drop_square"
            android:background="@color/grey"
            android:padding="20dp"/>

        <!--                  row 1                  -->
        <Space
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <Space
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <Space
            android:layout_row="1"
            android:layout_column="2"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <!--                  row 2                  -->
        <RelativeLayout
            android:layout_row="2"
            android:layout_column="0"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/bottomLeft_drop_square"
            android:background="@color/grey"
            android:padding="20dp"/>

        <Space
            android:layout_row="2"
            android:layout_column="1"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_row="2"
            android:layout_column="2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/bottomRight_drop_square"
            android:background="@color/grey"
            android:padding="20dp"/>

    </GridLayout>
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/GridLayout1"
        android:layout_centerHorizontal="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_1"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_2"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_3"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_4"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_5"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_6"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_7"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_8"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_9"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/star_off"
                android:id="@+id/star_10"/>
        </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start over"
        android:id="@+id/button6"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/top_container"
        android:onClick="startOver"/>


</RelativeLayout>